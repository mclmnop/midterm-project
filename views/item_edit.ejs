<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Item edit Page</title>
    <%- include('partials/_header') %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <!-- page-specific styles here: -->



    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- Bootstrap scrips -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,700;1,400;1,700&family=Righteous&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/43bb42825d.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <div class ="searchResult">

      <div class="container bootstrap snippets bootdey">
          <hr>
          <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                  <div class="well search-result">
                      <div class="row">
                          <a href="/items/<%= searchResult.id%>/edit">
                              <div class="col-xs-6 col-sm-3 col-md-3 col-lg-2">
                                  <img class="img-responsive" src="<%= searchResult.image_url%>" alt="">
                              </div>
                              <div class="col-xs-6 col-sm-9 col-md-9 col-lg-10 title">
                                  <h3><%= searchResult.name%></h3>
                                  <p><%= searchResult.description%></p>
                                  <p>Price :<%= searchResult.price / 100 %> $$$</p>
                              </div>
                          </a>
                      </div>
                  </div>
              </div>
          </div>
      </div>

      <div class = "messageToVendor">
        <div class ="form">
          <form method="POST" action="/items/<%= searchResult.id%>/edit" class="form-inline form-second">
            <input class="form-control" type="text" placeholder="Name" name="name" />
            <input class="form-control" type="text" placeholder="Description" name="description" />
            <input class="form-control" type="text" placeholder="Price" name="price" pattern="\d+(\.\d{1,2})?" />
            <input class="form-control" type="text" placeholder="Image URL" name="image_url" />
            <button class="btn btn-primary" type="submit">Submit changes</button>
            <script src="https://kit.fontawesome.com/43bb42825d.js" crossorigin="anonymous"></script>
          </form>
          <form method="POST" action="/items/<%= searchResult.id%>/edit" class="form-inline form-second">
            <button class="btn btn-primary" type="submit" name='sold' value='Mark as sold'>Mark as sold</button>
          </form>
          <form method="POST" action="/items/<%= searchResult.id%>/delete" class="form-inline form-second">
            <button class="btn btn-primary" type="submit" name='remove'>Remove listing</button>
          </form>
          <div>
            <form method="POST" action="/items/<%= searchResult.id%>/contact" class="form-inline form-second">
              <input class="form-control" type="text" placeholder="buyer ID" name="buyer_id" />
              <button class="btn btn-primary" type="submit" name='sendNotif' value='Send Notification'>Send notification to buyer</button>
            </form>
          </div>
        </div>
      </div>
  </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Search Result Page</title>
    <%- include('partials/_header') %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <!-- page-specific styles here: -->
    <link rel="stylesheet" href="/styles/items.css" type="text/css" />


    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- Bootstrap scrips -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Righteous&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/43bb42825d.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <div class ="searchResult">
      <%= searchResult.id %>

      <div class="container bootstrap snippets bootdey">
          <hr>
          <% for (let item in searchResult) {%>
          <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                  <div class="well search-result">
                      <div class="row">
                          <a href="/items/<%= searchResult[item].id%>">
                              <div class="col-xs-6 col-sm-3 col-md-3 col-lg-2">
                                  <img class="img-responsive" src="<%= searchResult[item].image_url%>" alt="">
                              </div>
                              <div class="col-xs-6 col-sm-9 col-md-9 col-lg-10 title">
                                  <h3><%= searchResult[item].name%></h3>
                                  <p><%= searchResult[item].description%></p>
                                  <p>Price :<%= searchResult[item].price / 100 %> $$$</p>
                                  <p>Posted on : <%= searchResult[item].creation_date.toISOString().slice(0, -14) %></p>
                              </div>
                          </a>
                          <% if (userID && !isVendor) { %>
                            <div class="form-check">
                              <form method="POST" action="/items/<%= searchResult[item].id%>/favourites">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" onclick="this.form.submit()">
                                <label class="form-check-label" for="defaultCheck1">
                                  Add as favourite
                                </label>
                              </form>
                            </div>
                          <%}%>
                      </div>
                  </div>
              </div>
          </div>
          <% } %>
      </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>

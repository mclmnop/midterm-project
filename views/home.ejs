  </head>

  <body>
    <div class="jumbotron-fluid">
      <div class="container text-center">
        <h1 class="display-4">VEND</h1>
        <h2 class="lead">The place to buy and sell your stuff</h2>
      </div>

      <!-- Search form -->
      <div class="container ">
        <form method="GET" action="/search" class="form text-center">
          <div class="form-group">
            <input class="form-control-lg form-input" id="item_search" type="text" name="item_search" placeholder="Search">
            <button class="btn btn-primary" type="submit">Search</button>
          </div>
          <div class="form-group form-inline mx-auto">
            <div class="col-1 mx-auto">
              <label class="col-form-label"  for="search_min">Minimum price:</label>
              <input class="form-control" id="search_min_price" type="number" name="search_min_price" min="0">
            </div>
            <div class="col-1 mx-auto">
              <label class="col-form-label" for="search_max">Maximum price:</label>
              <input class="form-control" id="search_max_price" type="number" name="search_max_price" min="0">
            </div>
            <div class="col-2">
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Featured Items -->
    <section class="pt-5 pb-5">
      <div class="container">
        <div class="row">
            <div class="col-6">
                <h3 class="mb-3">Featured Items</h3>
            </div>
            <div class="col-6 text-right">
                <a class="btn btn-primary mb-3 mr-1" href="#featuredItemsCarousel" role="button" data-slide="prev">
                    <i class="fa fa-arrow-left"></i>
                </a>
                <a class="btn btn-primary mb-3 " href="#featuredItemsCarousel" role="button" data-slide="next">
                    <i class="fa fa-arrow-right"></i>
                </a>
            </div>
            <div class="col-12">
                <div id="featuredItemsCarousel" class="carousel slide" data-ride="carousel">

                    <div class="carousel-inner">
                      <% for (let itemGroup of featuredItems) {%>
                        <div class="carousel-item active">
                          <div class="row">

                            <% if (itemGroup[0]) { %>
                              <div class="col-md-4 mb-3">
                                <div class="card">
                                  <img class="img-fluid" alt="<%= itemGroup[0].name %>" src=" <%= itemGroup[0].image_url %>">
                                  <div class="card-body">
                                    <h4 class="card-title"> <%= itemGroup[0].name %></h4>
                                    <p class="card-text"><%= itemGroup[0].description %></p>

                                  </div>

                                </div>
                              </div>
                              <% } %>

                            <% if (itemGroup[1]) { %>
                              <div class="col-md-4 mb-3">
                                <div class="card">
                                  <img class="img-fluid" alt="<%= itemGroup[1].name %>" src=" <%= itemGroup[1].image_url %>">
                                  <div class="card-body">
                                    <h4 class="card-title"> <%= itemGroup[1].name %></h4>
                                    <p class="card-text"><%= itemGroup[1].description %></p>

                                  </div>

                                </div>
                              </div>
                              <% } %>

                              <% if (itemGroup[2]) { %>
                                <div class="col-md-4 mb-3">
                                  <div class="card">
                                    <img class="img-fluid" alt="<%= itemGroup[2].name %>" src=" <%= itemGroup[2].image_url %>">
                                    <div class="card-body">
                                      <h4 class="card-title"> <%= itemGroup[2].name %></h4>
                                      <p class="card-text"><%= itemGroup[2].description %></p>

                                    </div>

                                  </div>
                                </div>
                                <% } %>



                            </div>
                          <% } %>
                        </div>
                        <div class="carousel-item">
                            <div class="row">

                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <img class="img-fluid" alt="100%x280" src="https://images.unsplash.com/photo-1532771098148-525cefe10c23?ixlib=rb-0.3.5&amp;q=80&amp;fm=jpg&amp;crop=entropy&amp;cs=tinysrgb&amp;w=1080&amp;fit=max&amp;ixid=eyJhcHBfaWQiOjMyMDc0fQ&amp;s=3f317c1f7a16116dec454fbc267dd8e4">
